---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="Page Not Found">
  <div class="flex flex-col items-center justify-center h-1/2 gap-7">
    <Image
      src={error}
      alt="404 Error - Page Not Found"
      class="max-w-44 h-auto"
    />
    <h1 class="text-5xl mt-4 mb-4">Page Not Found</h1>
    <p class="text-2xl mb-10">
      Sorry, we couldn't find the page you're looking for
    </p>
    <a
      href="/"
      class="inline-block bg-gray-100 p-2 mt-8 hover:bg-indigo-600 hover:text-white"
    >
      Go back home
    </a>
  </div>
</MainLayout>
